{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "iso-responder",
            "type": "lldb",
            "preLaunchTask": "binding-native-build",
            "request": "launch",
            "program": "afb-binder",
            "env": {
                "LD_LIBRARY_PATH": "/usr/local/lib64",
                "IFACE_SIMU": "lo",
                "SIMULATION_PORT": "1235",
                "SIMULATION_MODE": "responder",
            },
            "args": [
                "-vv",
                "--monitoring",
                "--trap-faults=0",
                "--port=1235",
                "--config=etc/binder-injector.yaml",
                "--config=etc/binding-injector.yaml",
            ],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "target stop-hook add -n _start -o continue",
                "settings set target.disable-aslr false"
            ]
        },
                {
            "name": "iso-injector",
            "type": "lldb",
            "preLaunchTask": "binding-native-build",
            "request": "launch",
            "program": "afb-binder",
            "env": {
                "LD_LIBRARY_PATH": "/usr/local/lib64",
                "IFACE_SIMU": "lo",
                "SIMULATION_PORT": "1234",
                "SIMULATION_MODE": "injector",
            },
            "args": [
                "-vv",
                "--monitoring",
                "--port=1234",
                "--trap-faults=0",
                "--config=etc/binder-injector.yaml",
                "--config=etc/binding-injector.yaml",
            ],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "target stop-hook add -n _start -o continue",
                "settings set target.disable-aslr false"
            ]
        }
    ]
}